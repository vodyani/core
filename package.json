{
  "name": "@vodyani/core",
  "license": "MIT",
  "version": "0.1.1",
  "author": "ChoGathK",
  "description": "â›° Vodyani's base module, which specifies everything Vodyani requires and provides beautiful, easy-to-use decorators to supplement the AOP capabilities that the domain model for vendors lacks.",
  "homepage": "https://github.com/vodyani/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/core.git"
  },
  "keywords": [
    "vodyani",
    "nodejs",
    "jest",
    "nestjs",
    "javascript",
    "typescript",
    "npm-package"
  ],
  "bugs": {
    "url": "https://github.com/vodyani/core/issues"
  },
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "install:all": "npm i && npm i @vodyani/eslint-config -D && npx husky install",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:html-report": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:json-report": "eslint ./src ./test -f json -o eslint-report.json"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@vodyani"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/test/.spec.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/(?!(lodash-es|other-es-lib))"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/platform-express": "^8.4.0",
    "autobind-decorator": "^2.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "fast-safe-stringify": "^2.1.1",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "peerDependencies": {
    "autobind-decorator": "^2.4.0",
    "fast-safe-stringify": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@nestjs/testing": "8.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.180",
    "@types/node": "16.11.26",
    "@types/supertest": "2.0.12",
    "@vodyani/eslint-config": "1.0.5",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2"
  }
}
